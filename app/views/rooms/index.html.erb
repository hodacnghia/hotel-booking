
<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Hotel</th>
      <th>Bed</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.type.name %></td>
        <td><%= room.hotel.name %></td>
        <td><%= room.bed %></td>
        <td><%= room.status %></td>
        <td><%#= link_to 'Show', room %></td>
        <td><%#= link_to 'Edit', edit_room_path(room) %></td>
        <td><%#= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
